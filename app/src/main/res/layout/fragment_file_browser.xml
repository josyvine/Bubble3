<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/windowBackground">

    <!-- Top Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="?attr/colorPrimary">
        <ImageButton
            android:id="@+id/button_up_directory"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_menu_browse"
            android:contentDescription="Up to parent directory"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@android:color/white" />
        <TextView
            android:id="@+id/text_current_path"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="/storage/emulated/0"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:padding="8dp"
            android:ellipsize="start"
            android:singleLine="true"/>

        <!-- MODIFIED: "Add Selected" Tick Button -->
        <ImageButton
            android:id="@+id/button_add_selected"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_add_selected"
            android:contentDescription="Add selected files"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@android:color/white" />

    </LinearLayout>

    <!-- Selection Action Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E0E0E0"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <Button
            android:id="@+id/button_select_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select All Files"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/textColorPrimary"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/button_clear_selection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear Selection"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/textColorPrimary"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>
    </LinearLayout>


    <!-- File List Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_files"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/text_empty_folder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="This folder is empty."
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/textColorSecondary"
            android:visibility="gone" />
    </FrameLayout>

    <!-- NEW: Close button at the bottom -->
    <Button
        android:id="@+id/button_close_browser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_gravity="bottom"
        android:layout_margin="8dp"/>

</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/windowBackground">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_zip"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/zip_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar_layout"
        android:padding="12dp"
        android:text="Tap on a file to exclude it from conversion. All other files will be converted."
        android:gravity="center"
        android:background="#E0E0E0"
        android:textColor="@color/textColorSecondary"
	/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/zip_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/convert_button_container"
        android:layout_below="@id/zip_instructions"
        android:padding="4dp" />

    <LinearLayout
        android:id="@+id/convert_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:background="?android:attr/windowBackground">

        <Button
            android:id="@+id/button_convert_from_zip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convert Selected Files"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>

